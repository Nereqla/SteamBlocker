<Window x:Class="Steam_Blocker_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Steam_Blocker_UI"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MainViewModel, IsDesignTimeCreatable=True}"
        Title="Steam Connection Blocker" Height="200" Width="250" Icon="/no-internet.png" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow">
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <Border Padding="0" Background="White" BorderThickness="1" BorderBrush="{Binding GradientBrush1}" Margin="2" CornerRadius="10">
        <Grid Margin="3">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontSize="24" FontFamily="Roboto" Text="{Binding CurrentSteamStatusText}"></TextBlock>
            <Border Grid.Row="1" Background="{Binding GradientBrush1}" Opacity="0.8">
                <Border.Effect>
                    <BlurEffect Radius="25"/>
                </Border.Effect>
            </Border>
            <Border Grid.Row="1" Margin="0" Padding="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0,0" StartPoint="1,0">
                        <GradientStop Color="{Binding GradientColor1}" Offset="1"/>
                        <GradientStop Color="{Binding GradientColor2}" Offset="0"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <Button Background="Transparent" BorderThickness="0" Grid.Row="2" FontFamily="Roboto" FontSize="16" FontWeight="Bold" Content="{Binding CurrentButtonText}" IsEnabled="{Binding IsButtonEnabled}" Command="{Binding ChangeRuleCommand}"></Button>


        </Grid>
    </Border>
</Window>
